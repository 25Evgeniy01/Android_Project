<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dio.gamefirst.MainActivity"
    android:background="@drawable/background"
    android:id="@+id/action_container">

    <Button
        android:id="@+id/myRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:textColor="@color/colorWhite"
        android:textSize="38sp"
        android:fontFamily="@font/freakomix"
        android:textIsSelectable="false"
        android:text="@string/myroomname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/konfeti"
        app:layout_constraintVertical_bias="0.73" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/recordname"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/freakomix"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/konfeti"
        app:layout_constraintVertical_bias="0.57" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/settingsname"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/freakomix"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/konfeti"
        app:layout_constraintVertical_bias="0.41000003" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/freakomix"
        android:textSize="52sp"
        android:text="@string/startgame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/konfeti"
        app:layout_constraintVertical_bias="0.23000002" />



    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfeti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />



</android.support.constraint.ConstraintLayout>
