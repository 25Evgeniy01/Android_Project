<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dio.gamefirst.MainActivity"
    android:background="@drawable/backgroundland"
    android:id="@+id/action_container">

    <Button
        android:id="@+id/myRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/myroomname"
        android:fontFamily="@font/freakomix"
        android:textColor="@color/colorWhite"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/konfeti"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/konfeti"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/recordname"
        android:fontFamily="@font/freakomix"
        android:textColor="@color/colorWhite"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/konfeti"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/konfeti"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/settingsname"
        android:textColor="@color/colorWhite"
        android:textSize="35dp"
        android:fontFamily="@font/freakomix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/konfeti"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/konfeti"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />


    <nl.dionsegijn.konfetti.KonfettiView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/konfeti"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonmain"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/startgame"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/freakomix"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/konfeti"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/konfeti"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        />

</android.support.constraint.ConstraintLayout>
